        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5000"
        android:id="@+id/textView10"
        android:textSize="35dp"
        android:layout_alignBottom="@+id/button9"
        android:layout_alignLeft="@+id/textView9"
