<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TBN"
        android:textSize="30dp"
        android:text="00"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="번 Table"
        android:id="@+id/textView3"
        android:textSize="30dp"
        android:layout_alignTop="@+id/TBN"
        android:layout_toRightOf="@+id/TBN"
        android:layout_toEndOf="@+id/TBN" />

    <Button
        android:onClick="onClick1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="김치찌개"
        android:id="@+id/button2"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/TBN"
        android:layout_alignLeft="@+id/TBN"
        android:layout_alignStart="@+id/TBN" />

    <Button
        android:onClick="onClick2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="된장찌개"
        android:id="@+id/button3"
        android:layout_below="@+id/button2"
        android:layout_alignLeft="@+id/button2"
        android:layout_alignStart="@+id/button2" />

    <Button
        android:onClick="onClick3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="부대찌개"
        android:id="@+id/button4"
        android:layout_below="@+id/button3"
        android:layout_alignLeft="@+id/button3"
        android:layout_alignStart="@+id/button3" />

    <Button
        android:onClick="onClick4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="순대국"
        android:id="@+id/button5"
        android:layout_below="@+id/button4"
        android:layout_alignLeft="@+id/button4"
        android:layout_alignStart="@+id/button4" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_above="@+id/button3"
        android:layout_toRightOf="@+id/button2"
        android:layout_toEndOf="@+id/button2"
        android:text="0"
        android:textSize="23dp"
        android:password="false" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText2"
        android:layout_above="@+id/button4"
        android:layout_alignLeft="@+id/editText"
        android:layout_alignStart="@+id/editText"
        android:textSize="23dp"
        android:text="0" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText3"
        android:layout_alignBottom="@+id/button4"
        android:layout_alignLeft="@+id/editText2"
        android:layout_alignStart="@+id/editText2"
        android:textSize="23dp"
        android:text="0" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText4"
        android:layout_alignBottom="@+id/button5"
        android:layout_toRightOf="@+id/button4"
        android:layout_toEndOf="@+id/button4"
        android:textSize="23dp"
        android:text="0" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="메뉴를 클릭하시면 메뉴의 설명을 보실 수 있습니다."
        android:id="@+id/textView4"
        android:layout_above="@+id/editText"
        android:layout_alignLeft="@+id/button2"
        android:layout_alignStart="@+id/button2" />

    <Button
        android:onClick="onClick5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="O K"
        android:id="@+id/button6"
        android:layout_below="@+id/textView4"
        android:layout_alignLeft="@+id/button7"
        android:layout_alignStart="@+id/button7" />

